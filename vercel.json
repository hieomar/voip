{
    "version": 2,
    "builds": [
        {
            "src": "*.php",
            "use": "vercel-php"
        }
    ],
    "routes": [
        {
            "src": "/images/(.*)",
            "dest": "/images/$1"
        },
        {
            "src": "/(.*\\.(jpg|jpeg|png|gif|svg|webp|ico|css|js))",
            "dest": "/$1"
        },
        {
            "src": "/(.*)\\.php",
            "dest": "/$1.php"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ]
}