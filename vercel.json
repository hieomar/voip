{
    "version": 2,
    "builds": [
        {
            "src": "*.php",
            "use": "vercel-php"
        }
    ],
    "routes": [
        {
            "src": "/(.*)\\.php",
            "dest": "/$1.php"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ]
}